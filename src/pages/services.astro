---
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';
import { Image } from 'astro:assets';

// Galeriden temsil g√∂rseller (Kendi dosya isimlerinle e≈üle≈ütir)
import removalImg from '../assets/gallery/fl/florida-tree-service-1.jpg';
import trimImg from '../assets/gallery/fl/florida-tree-service-2.jpg';
import emergencyImg from '../assets/gallery/fl/florida-tree-service-16.jpg';

const services = [
  {
    title: "Tree Removal",
    desc: "Safe and surgical removal of hazardous, dead, or unwanted trees using advanced rigging techniques.",
    icon: "üå≥",
    link: "/services/tree-removal",
    img: removalImg
  },
  {
    title: "Trimming & Pruning",
    desc: "Enhancing sunlight and airflow while promoting structural integrity and aesthetic beauty.",
    icon: "‚úÇÔ∏è",
    link: "/services/tree-trimming",
    img: trimImg
  },
  {
    title: "24/7 Emergency Service",
    desc: "Rapid response for fallen trees and storm damage cleanup across Florida's 67 counties.",
    icon: "üå™Ô∏è",
    link: "/services/emergency-response",
    img: emergencyImg
  },
  {
    title: "Stump Grinding",
    desc: "Complete elimination of unsightly stumps and underground roots to reclaim your lawn.",
    icon: "üèóÔ∏è",
    link: "/services/stump-grinding"
  },
  {
    title: "Land Clearing",
    desc: "Full-scale site preparation and brush removal for residential and commercial development.",
    icon: "üöú",
    link: "/services/land-clearing"
  },
  {
    title: "Commercial Care",
    desc: "Dedicated tree management solutions for HOAs, hotels, golf courses, and municipalities.",
    icon: "üè¢",
    link: "/services/commercial-services"
  }
];
---

<MainLayout 
  title="Professional Tree Services Florida | Certified Arborist Network" 
  description="Explore our full suite of Florida tree care services including removal, trimming, stump grinding, and 24/7 emergency response."
>
  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 6rem 1rem; text-align: center; border-bottom: 5px solid #f97316;">
    <div class="container">
      <h1 style="font-size: clamp(2.5rem, 8vw, 4rem); margin: 0; font-weight: 900; line-height: 1;">Our Expert Services</h1>
      <p style="font-size: 1.3rem; color: #95d5b2; margin-top: 1.5rem; max-width: 800px; margin-left: auto; margin-right: auto;">
          The most comprehensive tree care network in Florida. Licensed, insured, and ready to serve.
      </p>
    </div>
  </header>

  <main class="container" style="padding-top: 5rem; padding-bottom: 12rem;">
    
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 3rem;">
      {services.map(service => (
        <div style="background: white; border: 1px solid #eee; border-radius: 28px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.03); transition: 0.3s;" class="s-card">
          {service.img && (
            <div style="height: 200px; overflow: hidden;">
                <Image src={service.img} alt={service.title} width={400} height={300} style="width: 100%; height: 100%; object-fit: cover;" />
            </div>
          )}
          <div style="padding: 2rem;">
              <div style="font-size: 2.5rem; margin-bottom: 1rem;">{service.icon}</div>
              <h2 style="color: #064e3b; font-size: 1.6rem; margin: 0 0 15px; font-weight: 800;">{service.title}</h2>
              <p style="color: #4b5563; line-height: 1.7; font-size: 1.05rem; margin-bottom: 2rem;">{service.desc}</p>
              <a href={service.link} style="color: #ea580c; text-decoration: none; font-weight: 800; font-size: 1rem; display: flex; align-items: center; gap: 8px;">
                LEARN MORE <span>‚Üí</span>
              </a>
          </div>
        </div>
      ))}
    </div>

    <!-- CENTRAL CALL CARD -->
    <div style="margin-top: 7rem; background: #064e3b; padding: 5rem 2rem; border-radius: 40px; text-align: center; color: white; position: relative; overflow: hidden;">
        <div style="position: relative; z-index: 2;">
            <h2 style="font-size: 2.5rem; font-weight: 900; margin-top: 0;">Unsure Which Service You Need?</h2>
            <p style="font-size: 1.2rem; color: #95d5b2; margin-bottom: 3rem; max-width: 600px; margin-left: auto; margin-right: auto;">
                Call our dispatch office for a professional recommendation and a free on-site estimate.
            </p>
            <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1.4rem 3.5rem; text-decoration: none; border-radius: 20px; font-weight: 900; font-size: 1.6rem; display: inline-block; box-shadow: 0 10px 30px rgba(234, 88, 12, 0.4);">
                {SITE_CONFIG.phone}
            </a>
        </div>
    </div>

  </main>
</MainLayout>

<style>
  .s-card:hover { transform: translateY(-10px); box-shadow: 0 25px 50px -12px rgba(0,0,0,0.1); border-color: #95d5b2; }
</style>