---
import fs from 'node:fs';
import path from 'node:path';
import { parse } from 'csv-parse/sync';
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const filePath = path.resolve('./src/data/cities.csv');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  const records = parse(fileContent, { columns: true, skip_empty_lines: true, bom: true });

  const services = [
    { prefix: 'tree-removal', name: 'Tree Removal', icon: 'üå≥' },
    { prefix: 'stump-grinding', name: 'Stump Grinding', icon: 'üèóÔ∏è' },
    { prefix: 'emergency-service', name: 'Emergency Tree Service', icon: 'üå™Ô∏è' }
  ];

  const paths = [];
  // Vercel Hobby plan build s√ºresi i√ßin 650 ≈üehir limiti (Toplam 1950 sayfa)
  const limitedRecords = records.slice(0, 650);

  limitedRecords.forEach((row) => {
    if (!row.City) return;
    const citySlug = row.City.toLowerCase().trim().replace(/\s+/g, '-');
    
    services.forEach((service) => {
      paths.push({
        params: { slug: `${service.prefix}-${citySlug}` },
        props: { 
          cityData: row, 
          serviceInfo: service,
          // SEO i√ßin aynƒ± il√ßedeki diƒüer ≈üehirleri prop olarak g√∂nderiyoruz
          nearby: limitedRecords.filter(r => r.County === row.County && r.City !== row.City).slice(0, 5)
        },
      });
    });
  });
  return paths;
}

const { cityData, serviceInfo, nearby } = Astro.props;

// G√∂rsel Sistemi (Statik Deterministic Se√ßim)
const allImages = import.meta.glob('../assets/gallery/fl/*.{jpeg,jpg,png,gif,webp}');
const imagePaths = Object.keys(allImages);
let selectedImage = null;
if (imagePaths.length > 0) {
  const imageIndex = Math.abs((cityData.City + serviceInfo.prefix).split('').reduce((acc, char) => acc + char.charCodeAt(0), 0)) % imagePaths.length;
  const imgModule: any = await allImages[imagePaths[imageIndex]]();
  selectedImage = imgModule.default;
}

const landmark = cityData.Landmark || "the local area";

// Dinamik FAQ
const faqs = {
    'tree-removal': [
        { q: `What is the cost of tree removal in ${cityData.City}?`, a: `Pricing in ${cityData.City} depends on the tree's height, proximity to structures like ${landmark}, and equipment access. Call for a free local estimate.` },
        { q: `Do I need a permit in ${cityData.County} County?`, a: `Many areas in ${cityData.County} County require permits for removing native oaks or large pines. Our local specialists can guide you through the process.` }
    ],
    'stump-grinding': [
        { q: `Why should I grind stumps in ${cityData.City}?`, a: `In Florida's humid climate, stumps near ${landmark} quickly become breeding grounds for termites and ants. Grinding prevents pest infestation.` },
        { q: `How deep do you grind?`, a: `Standard grinding in ${cityData.City} goes 6-12 inches below the surface, allowing for lawn replanting.` }
    ],
    'emergency-service': [
        { q: `How fast is 24/7 response in ${cityData.City}?`, a: `We prioritize ${cityData.City} residents after severe weather. Typical dispatch time near ${landmark} is under 3 hours.` },
        { q: `Can you help with insurance claims?`, a: `Yes, our crews document storm damage with photos and reports for major insurance providers in ${cityData.County} County.` }
    ]
}[serviceInfo.prefix] || [];

const optimizedTitle = `#1 ${serviceInfo.name} ${cityData.City}, FL | Local Experts`;
---

<MainLayout title={optimizedTitle} description={cityData.Description}>
  
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqs.map(f => ({
      "@type": "Question", "name": f.q, "acceptedAnswer": { "@type": "Answer", "text": f.a }
    }))
  })} slot="head" />

  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 4rem 1.5rem; text-align: center; border-bottom: 5px solid #ea580c;">
    <div class="container">
      <div style="font-size: 0.9rem; margin-bottom: 1rem; color: #ffb703; font-weight: 800; letter-spacing: 1px;">LOCAL EXPERTS IN {cityData.County.toUpperCase()} COUNTY</div>
      <h1 style="margin: 0; font-size: clamp(2.2rem, 8vw, 3.8rem); font-weight: 900; line-height: 1.1;">{cityData.City} {serviceInfo.name}</h1>
      <p style="font-size: 1.2rem; color: #95d5b2; margin-top: 1.5rem; max-width: 800px; margin: 1.5rem auto 0;">Professional tree care services near <strong>{landmark}</strong> and surrounding neighborhoods.</p>
    </div>
  </header>

  <main class="container" style="max-width: 1000px; margin: -3rem auto 0; position: relative; z-index: 10;">
    
    <!-- CTA BOX -->
    <div style="background: white; padding: 2.5rem; border-radius: 24px; text-align: center; box-shadow: 0 20px 40px rgba(0,0,0,0.1); border: 1px solid #e5e7eb;">
      <h3 style="margin-top: 0; color: #064e3b; font-weight: 800;">Get Your Free {cityData.City} Estimate</h3>
      <p style="color: #64748b; margin-bottom: 2rem;">Connecting you with licensed arborists for <strong>{serviceInfo.name}</strong>.</p>
      <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1.2rem; text-decoration: none; border-radius: 14px; font-weight: 900; font-size: 1.8rem; display: block; border-bottom: 4px solid #9a3412;">{SITE_CONFIG.phone}</a>
      <p style="margin-top: 15px; font-size: 0.85rem; color: #94a3b8; font-weight: 600;">‚úì NO OBLIGATION ‚Ä¢ LOCAL DISPATCH</p>
    </div>

    <!-- CONTENT SECTION -->
    <section style="margin-top: 4rem; display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px;">
        <div style="background: #f8fafc; padding: 2rem; border-radius: 20px; border: 1px solid #eee;">
            <h4 style="color: #064e3b; margin-top: 0; font-weight: 800;">Service Description</h4>
            <p style="line-height: 1.7; color: #475569;">{cityData.Description}</p>
        </div>
        <div style="background: #064e3b; color: white; padding: 2rem; border-radius: 20px; display: flex; flex-direction: column; justify-content: center;">
            <h4 style="margin-top: 0; color: #ffb703;">Dispatch Area Info</h4>
            <ul style="padding-left: 20px; margin: 0; line-height: 2;">
                <li>County: {cityData.County}</li>
                <li>Primary Focus: {serviceInfo.name}</li>
                <li>Near: {landmark}</li>
                <li>Status: <span style="color: #4ade80;">‚óè Active Dispatch</span></li>
            </ul>
        </div>
    </section>

    <!-- IMAGE -->
    {selectedImage && (
      <section style="margin-top: 4rem;">
        <Image src={selectedImage} alt={`${serviceInfo.name} project in ${cityData.City}`} width={1000} height={500} format="webp" style="width: 100%; height: auto; border-radius: 24px; object-fit: cover;" />
      </section>
    )}

    <!-- FAQ -->
    <section style="margin-top: 5rem;">
        <h2 style="color: #064e3b; text-align: center; font-weight: 900; margin-bottom: 3rem;">Common Questions</h2>
        <div style="display: flex; flex-direction: column; gap: 20px;">
            {faqs.map(f => (
                <div style="background: white; padding: 2rem; border-radius: 20px; border: 1px solid #eee;">
                    <h4 style="color: #1b4332; font-weight: 800; margin: 0 0 10px;">{f.q}</h4>
                    <p style="color: #4b5563; margin: 0; line-height: 1.6;">{f.a}</p>
                </div>
            ))}
        </div>
    </section>

    <!-- INTERNAL LINKING MOAT (√áok √ñnemli) -->
    <section style="margin-top: 6rem; margin-bottom: 10rem; border-top: 1px solid #eee; padding-top: 3rem;">
        <h3 style="color: #064e3b; font-size: 1.2rem; font-weight: 800; margin-bottom: 1.5rem;">Other Service Areas in {cityData.County} County:</h3>
        <div style="display: flex; flex-wrap: wrap; gap: 10px;">
            {nearby.map((n: any) => (
                <a href={`/tree-removal-${n.City.toLowerCase().replace(/\s+/g, '-')}`} style="background: #f1f5f9; color: #475569; padding: 8px 16px; border-radius: 50px; text-decoration: none; font-size: 0.85rem; font-weight: 600; border: 1px solid #e2e8f0;">
                    {n.City} Tree Care
                </a>
            ))}
        </div>
    </section>

  </main>
</MainLayout>