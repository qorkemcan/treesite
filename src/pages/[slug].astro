  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "BreadcrumbList",
          "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Home", "item": SITE_CONFIG.siteUrl },
            { "@type": "ListItem", "position": 2, "name": "Florida", "item": SITE_CONFIG.siteUrl },
            { "@type": "ListItem", "position": 3, "name": countyName, "item": `${SITE_CONFIG.siteUrl}/county/${countySlug}` },
            { "@type": "ListItem", "position": 4, "name": `${serviceInfo.name} in ${cityName}`, "item": currentFullUrl }
          ]
        },
        {
          "@type": "Service",
          "name": `${serviceInfo.name} in ${cityName}, FL`,
          "description": cityData.Description,
          "provider": {
            "@type": "LocalBusiness",
            "@id": `${SITE_CONFIG.siteUrl}/#localbusiness`,
