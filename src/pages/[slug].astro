---
import fs from 'node:fs';
import path from 'node:path';
import { parse } from 'csv-parse/sync';
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const filePath = path.resolve('./src/data/cities.csv');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  const records = parse(fileContent, { columns: true, skip_empty_lines: true, bom: true });

  const services = [
    { prefix: 'tree-removal', name: 'Tree Removal', icon: 'üå≥' },
    { prefix: 'stump-grinding', name: 'Stump Grinding', icon: 'üèóÔ∏è' },
    { prefix: 'emergency-service', name: 'Emergency Tree Service', icon: 'üå™Ô∏è' }
  ];

  const paths = [];
  // Vercel limitini a≈ümamak i√ßin ilk 650 kayƒ±t
  const limitedRecords = records.slice(0, 650);
  const seenSlugs = new Set();

  limitedRecords.forEach((row) => {
    if (!row.City) return;
    const citySlug = row.City.toLowerCase().trim().replace(/\s+/g, '-');
    
    services.forEach((service) => {
      const fullSlug = `${service.prefix}-${citySlug}`;
      if (!seenSlugs.has(fullSlug)) {
        seenSlugs.add(fullSlug);
        paths.push({
          params: { slug: fullSlug },
          props: { cityData: row, serviceInfo: service },
        });
      }
    });
  });
  return paths;
}

const { cityData, serviceInfo } = Astro.props;

// G√∂rsel Sistemi
const allImages = import.meta.glob('../assets/gallery/fl/*.{jpeg,jpg,png,gif,webp}');
const imagePaths = Object.keys(allImages);
let selectedImage = null;
if (imagePaths.length > 0) {
  const imageIndex = Math.abs((cityData.City + serviceInfo.prefix).split('').reduce((acc, char) => acc + char.charCodeAt(0), 0)) % imagePaths.length;
  const selectedImageImport = allImages[imagePaths[imageIndex]];
  // @ts-ignore
  const imgModule = await selectedImageImport();
  selectedImage = imgModule.default;
}

const treeType = cityData.MainTreeType || 'native Florida trees';
const landmark = cityData.Landmark || "the local area";
const population = cityData.Population ? Number(cityData.Population).toLocaleString() : null;

// Dƒ∞NAMƒ∞K FAQ Sƒ∞STEMƒ∞
const faqs = {
    'tree-removal': [
        { q: `How much does tree removal cost in ${cityData.City}?`, a: `Tree removal in ${cityData.City} is priced based on size and location. We provide free on-site estimates near ${landmark}.` },
        { q: `Are you licensed for hazardous removals in ${cityData.County} County?`, a: `Yes, our network connects you with fully licensed and insured crews specialized in dangerous Florida tree removals.` }
    ],
    'stump-grinding': [
        { q: `Do you offer stump grinding in ${cityData.City}?`, a: `Yes, we provide full stump removal and surface root grinding to restore your property near ${landmark}.` },
        { q: `Will stump removal prevent termites?`, a: `Absolutely. Grinding down stumps in ${cityData.County} County removes the primary food source for subterranean termites.` }
    ],
    'emergency-service': [
        { q: `How fast is emergency tree response near ${landmark}?`, a: `Our 24/7 dispatch network typically reaches ${cityData.City} homes within 2-4 hours after a major storm.` },
        { q: `Do you work with insurance in ${cityData.City}?`, a: `Yes, our local crews provide photos and data needed for storm damage insurance mitigation in ${cityData.County} County.` }
    ]
}[serviceInfo.prefix] || [];

const optimizedTitle = `#1 ${serviceInfo.name} in ${cityData.City}, FL | Licensed & Insured`;
---

<MainLayout title={optimizedTitle} description={cityData.Description}>
  
  <!-- FAQ Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqs.map(f => ({
      "@type": "Question",
      "name": f.q,
      "acceptedAnswer": { "@type": "Answer", "text": f.a }
    }))
  })} slot="head" />

  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 5rem 1rem; text-align: center; border-bottom: 5px solid #f97316;">
    <div class="container">
      <div style="font-size: 1rem; margin-bottom: 1.5rem; color: #ffb703; font-weight: 700; text-transform: uppercase;">Verified Pros in {cityData.County} County</div>
      <h1 style="margin: 0; font-size: clamp(2rem, 8vw, 3.5rem); font-weight: 900; line-height: 1.1;">{cityData.City} {serviceInfo.name}</h1>
      <p style="font-size: 1.4rem; margin-top: 1.5rem; color: #95d5b2; max-width: 800px; margin-left: auto; margin-right: auto;">
          Serving {cityData.City} residents near <strong>{landmark}</strong>.
      </p>
    </div>
  </header>

  <main class="container" style="max-width: 1100px; margin: -3rem auto 0; padding: 0 1.5rem; position: relative; z-index: 10;">
    
    <!-- CTA -->
    <div style="background: white; padding: 3rem 1.5rem; border-radius: 24px; text-align: center; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15); border: 1px solid #e5e7eb;">
      <h3 style="margin-top: 0; color: #064e3b; font-size: 1.8rem; font-weight: 800;">Free Estimate for {cityData.City}</h3>
      <p style="color: #4b5563; margin-bottom: 2rem;">Local, licensed, and insured crews for <strong>{serviceInfo.name}</strong>.</p>
      <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1.4rem; text-decoration: none; border-radius: 16px; font-weight: 900; font-size: clamp(1.4rem, 6vw, 2.2rem); display: block; box-shadow: 0 10px 25px rgba(234, 88, 12, 0.3); border: 2px solid #fdba74;">{SITE_CONFIG.phone}</a>
    </div>

    <!-- WEATHER & INFO BOX (Yan yana mizanpaj zorlamasƒ±) -->
    <section style="margin-top: 4rem; display: flex; flex-wrap: wrap; gap: 20px;">
        <div style="flex: 1; min-width: 300px; background: #064e3b; padding: 1.5rem; border-radius: 24px; color: white;">
            <a class="weatherwidget-io" href={`https://forecast7.com/en/27d66n81d52/florida/?unit=us`} data-label_1={cityData.City} data-label_2="WEATHER" data-font="Inter" data-icons="Climacons Animated" data-theme="pure" data-basecolor="#064e3b" data-textcolor="#ffffff" data-highcolor="#ffb703" data-lowcolor="#95d5b2" >{cityData.City} WEATHER</a>
            <script is:inline src="https://weatherwidget.io/js/widget.min.js"></script>
        </div>
        <div style="flex: 1; min-width: 300px; background: #fdf2f2; border: 1px solid #fee2e2; padding: 2rem; border-radius: 24px; display: flex; flex-direction: column; justify-content: center;">
            <h4 style="color: #991b1b; margin: 0; font-weight: 800; font-size: 1.2rem;">‚ö° Storm Warning</h4>
            <p style="color: #7f1d1d; font-size: 0.95rem; margin-top: 10px; line-height: 1.5;">
                Branches near <strong>{landmark}</strong> can be unpredictable in high winds. Protect your property in <strong>{cityData.County} County</strong> with professional maintenance.
            </p>
        </div>
    </section>

    <!-- HOW IT WORKS -->
    <section style="margin-top: 5rem; text-align: center;">
        <h2 style="color: #064e3b; font-size: 2.2rem; font-weight: 900; margin-bottom: 3rem;">How Our Service Works</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 30px;">
            <div style="background: white; padding: 2.5rem 1.5rem; border-radius: 24px; border: 1px solid #e5e7eb; position: relative;">
                <div style="background: #ea580c; color: white; width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 900; position: absolute; top: -17px; left: 50%; transform: translateX(-50%); border: 4px solid #fcfcfc;">1</div>
                <div style="font-size: 2.5rem; margin-bottom: 1rem;">üìû</div>
                <h4 style="color: #064e3b; font-weight: 800; font-size: 1.2rem;">Call Dispatch</h4>
                <p style="color: #64748b; font-size: 0.9rem;">Call {SITE_CONFIG.phone} to describe your needs in {cityData.City}.</p>
            </div>
            <div style="background: white; padding: 2.5rem 1.5rem; border-radius: 24px; border: 1px solid #e5e7eb; position: relative;">
                <div style="background: #ea580c; color: white; width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 900; position: absolute; top: -17px; left: 50%; transform: translateX(-50%); border: 4px solid #fcfcfc;">2</div>
                <div style="font-size: 2.5rem; margin-bottom: 1rem;">üë®‚Äçüîß</div>
                <h4 style="color: #064e3b; font-weight: 800; font-size: 1.2rem;">Local Match</h4>
                <p style="color: #64748b; font-size: 0.9rem;">We link you with the top-rated crew in {cityData.County} County.</p>
            </div>
            <div style="background: white; padding: 2.5rem 1.5rem; border-radius: 24px; border: 1px solid #e5e7eb; position: relative;">
                <div style="background: #ea580c; color: white; width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 900; position: absolute; top: -17px; left: 50%; transform: translateX(-50%); border: 4px solid #fcfcfc;">3</div>
                <div style="font-size: 2.5rem; margin-bottom: 1rem;">‚úÖ</div>
                <h4 style="color: #064e3b; font-weight: 800; font-size: 1.2rem;">Job Done</h4>
                <p style="color: #64748b; font-size: 0.9rem;">Professional results and a clean, storm-ready property.</p>
            </div>
        </div>
    </section>

    <!-- IMAGE -->
    {selectedImage && (
      <section style="margin-top: 5rem;">
        <Image src={selectedImage} alt={`${serviceInfo.name} near ${landmark}`} width={1000} height={540} format="webp" style="width: 100%; height: auto; border-radius: 24px; box-shadow: 0 15px 30px rgba(0,0,0,0.1);" />
      </section>
    )}

    <!-- FAQ SECTION (Yeni Dinamik B√∂l√ºm) -->
    <section style="margin-top: 6rem;">
        <h2 style="color: #064e3b; font-size: 2.2rem; font-weight: 900; text-align: center; margin-bottom: 3rem;">Common Questions in {cityData.City}</h2>
        <div style="display: flex; flex-direction: column; gap: 20px;">
            {faqs.map(f => (
                <div style="background: white; padding: 2.5rem; border-radius: 28px; border: 1px solid #e5e7eb; box-shadow: 0 4px 6px rgba(0,0,0,0.02);">
                    <h4 style="color: #1b4332; font-weight: 800; margin: 0 0 15px; font-size: 1.3rem;">{f.q}</h4>
                    <p style="color: #4b5563; line-height: 1.8; margin: 0; font-size: 1.1rem;">{f.a}</p>
                </div>
            ))}
        </div>
    </section>

    <!-- AUTHORITY TEXT -->
    <section style="margin-top: 6rem; margin-bottom: 12rem;">
      <h2 style="color: #064e3b; font-size: 2.1rem; margin-bottom: 2rem; font-weight: 800;">Tree Authority: {cityData.City}</h2>
      <div style="background: white; border-radius: 24px; padding: 3rem; border: 1px solid #e5e7eb; line-height: 1.9; box-shadow: 0 4px 6px rgba(0,0,0,0.02); position: relative;">
        <div style="position: absolute; top: -15px; left: 30px; background: #ea580c; color: white; padding: 5px 20px; border-radius: 50px; font-weight: 800; font-size: 0.8rem;">SERVICE FOCUS: {serviceInfo.name.toUpperCase()}</div>
        <p style="font-size: 1.25rem; color: #1b4332; font-weight: 700; margin-bottom: 1.5rem;">{cityData.Description}</p>
        <p style="font-size: 1.1rem; color: #4b5563;">
            In <strong>{cityData.City}</strong>, maintaining the health of your <strong>{treeType}</strong> is essential. Whether you are near <strong>{landmark}</strong> or in the surrounding area, our network specialized in {serviceInfo.name} ensures your property remains safe during Florida's unpredictable weather.
        </p>
      </div>
    </section>

  </main>
</MainLayout>

<style>
  a:hover { transform: translateY(-3px); box-shadow: 0 10px 20px rgba(0,0,0,0.1); transition: 0.2s; }
</style>