<style>
  .stat-card { background: white; padding: 2rem; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); text-align: center; }
  .stat-card h3 { color: #064e3b; margin: 10px 0 0; font-weight: 900; }
