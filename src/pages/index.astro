  .main-service-link { text-decoration: none; color: #1b4332; font-weight: 800; font-size: 1rem; }
  .main-service-link:hover { color: #ea580c; }
  .sub-services { display: flex; gap: 12px; }
  .sub-services a { text-decoration: none; color: #64748b; font-size: 0.7rem; font-weight: 600; }
  .sub-services a:hover { color: #ea580c; }
</style>

<script is:inline>
    const searchInput = document.getElementById('citySearch');
    const statusText = document.getElementById('searchStatus');
    const countyCards = document.querySelectorAll('.county-card');

    // 1. Manuel Tƒ±klama ile A√ßma/Kapama
    countyCards.forEach(card => {
        const btn = card.querySelector('.county-toggle');
        btn.addEventListener('click', () => {
            const isOpen = card.classList.contains('is-open');
            // Diƒüerlerini kapat (Opsiyonel - istersen bu satƒ±rƒ± silebilirsin)
            // countyCards.forEach(c => c.classList.remove('is-open')); 
            card.classList.toggle('is-open', !isOpen);
        });
    });

    // 2. Akƒ±llƒ± Arama Fonksiyonu
    searchInput.addEventListener('input', (e) => {
        const term = e.target.value.toLowerCase().trim();
        let anyVisible = false;

        countyCards.forEach(card => {
            const countyName = card.getAttribute('data-county');
            const cityItems = card.querySelectorAll('.city-item');
            let hasVisibleCity = false;

            if (term.length === 0) {
                card.style.display = 'block';
                card.classList.remove('is-open');
                cityItems.forEach(i => i.style.display = 'flex');
                return;
            }

            cityItems.forEach(item => {
                const cityName = item.getAttribute('data-city');
                if (cityName.includes(term) || countyName.includes(term)) {
                    item.style.display = 'flex';
                    hasVisibleCity = true;
                } else {
                    item.style.display = 'none';
                }
            });

            if (hasVisibleCity || countyName.includes(term)) {
                card.style.display = 'block';
                card.classList.add('is-open'); // Arama yapƒ±ldƒ±ƒüƒ±nda otomatik a√ß
                anyVisible = true;
            } else {
                card.style.display = 'none';
                card.classList.remove('is-open');
            }
        });
        
        if (term.length === 0) anyVisible = true;
        statusText.style.display = anyVisible ? 'none' : 'block';
    });
</script>