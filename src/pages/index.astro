    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s cubic-bezier(0, 1, 0, 1);
    background: #fff;
  }
  .county-card.is-open .city-list-content {
    max-height: 5000px; /* B√ºy√ºk bir deƒüer */
    transition: max-height 0.4s ease-in-out;
  }
  .county-card.is-open .chevron { transform: rotate(180deg); color: #ea580c; }
  .county-card.is-open { border-color: #ea580c; box-shadow: 0 10px 20px rgba(0,0,0,0.05); }

