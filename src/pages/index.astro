    background: white; 
    border-radius: 16px; 
    border: 1px solid #e5e7eb; 
    overflow: hidden; 
    transition: all 0.3s ease;
  }
  .county-toggle {
    width: 100%;
    padding: 1.2rem;
    background: none;
    border: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    text-align: left;
    transition: background 0.2s;
  }
  .county-toggle:hover { background: #f8fafc; }
  .county-name { color: #1b4332; font-weight: 800; font-size: 1.1rem; }
  .chevron { font-size: 0.7rem; color: #94a3b8; transition: transform 0.3s; }

  /* ACCORDION LOGIC */
