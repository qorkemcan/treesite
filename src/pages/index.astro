<style>
  .city-link:hover { color: #ea580c !important; transform: translateX(3px); }
  .county-card:hover { border-color: #95d5b2; transform: translateY(-5px); box-shadow: 0 15px 30px rgba(0,0,0,0.05); }
</style>

<!-- SEARCH LOGIC -->
<script is:inline>
    const searchInput = document.getElementById('citySearch');
    const statusText = document.getElementById('searchStatus');
    const countyCards = document.querySelectorAll('.county-card');

    searchInput.addEventListener('input', (e) => {
        const term = e.target.value.toLowerCase().trim();
        let anyVisible = false;

        countyCards.forEach(card => {
            const countyName = card.getAttribute('data-county');
            const cityLinks = card.querySelectorAll('.city-link');
            let hasVisibleCity = false;

            cityLinks.forEach(link => {
                const cityName = link.getAttribute('data-city');
                if (cityName.includes(term) || countyName.includes(term)) {
                    link.style.display = 'flex';
                    hasVisibleCity = true;
                } else {
                    link.style.display = 'none';
                }
            });

            if (hasVisibleCity || countyName.includes(term)) {
                card.style.display = 'block';
                anyVisible = true;
                if (countyName.includes(term) && !hasVisibleCity) {
                    cityLinks.forEach(l => l.style.display = 'flex');
                }
            } else {
                card.style.display = 'none';
            }
        });
        statusText.style.display = anyVisible ? 'none' : 'block';
    });
</script>