---
// src/pages/contact.astro
import MainLayout from "../layouts/MainLayout.astro";
import { SITE_CONFIG } from "../config.js";
---

<MainLayout
  title="Contact Us | ProTreeTrim‚Ñ¢ Florida Dispatch"
  description="Get in touch with ProTreeTrim‚Ñ¢ for service coordination, partnerships, or administrative support regarding Florida tree care."
>
  <header
    style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 5rem 1.5rem; text-align: center;"
  >
    <h1
      style="font-size: clamp(2.2rem, 8vw, 3.5rem); margin: 0; font-weight: 900;"
    >
      Connect With Us
    </h1>
    <p style="font-size: 1.2rem; color: #95d5b2; margin-top: 1rem;">
      Official Dispatch & Administrative Support
    </p>
  </header>

  <main
    class="container"
    style="max-width: 1000px; padding: 4rem 1.5rem 12rem;"
  >
    <!-- Alt bo≈üluk 12rem yapƒ±larak daha da ferahlatƒ±ldƒ± -->

    <div
      style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px; margin-bottom: 5rem;"
    >
      <!-- TELEFON KUTUSU -->
      <div
        style="background: #fff7ed; border: 2px solid #ea580c; padding: 2.5rem; border-radius: 24px; text-align: center; box-shadow: 0 10px 30px rgba(234, 88, 12, 0.05);"
      >
        <div style="font-size: 2.5rem; margin-bottom: 15px;">üìû</div>
        <h3
          style="color: #9a3412; margin: 0; font-size: 1.5rem; font-weight: 800;"
        >
          24/7 Dispatch
        </h3>
        <p style="color: #7c2d12; font-size: 0.95rem; margin-bottom: 1.5rem;">
          For service requests, estimates, and storm emergencies.
        </p>
        <a
          href={SITE_CONFIG.phoneHref}
          style="background: #ea580c; color: white !important; padding: 12px 24px; text-decoration: none; border-radius: 12px; font-weight: 900; font-size: 1.2rem; display: block;"
          >{SITE_CONFIG.phone}</a
        >
      </div>

      <!-- EMAIL KUTUSU -->
      <div
        style="background: white; border: 1px solid #e2e8f0; padding: 2.5rem; border-radius: 24px; text-align: center; box-shadow: 0 10px 25px rgba(0,0,0,0.02);"
      >
        <div style="font-size: 2.5rem; margin-bottom: 15px;">üìß</div>
        <h3
          style="color: #1b4332; margin: 0; font-size: 1.5rem; font-weight: 800;"
        >
          Email Support
        </h3>
        <p style="color: #64748b; font-size: 0.95rem; margin-bottom: 1.5rem;">
          For business inquiries, advertising, and network partnerships.
        </p>
        <a
          href={`mailto:${SITE_CONFIG.email}`}
          style="color: #ea580c; font-weight: 800; text-decoration: none; font-size: 1.1rem;"
          >{SITE_CONFIG.email}</a
        >
      </div>
    </div>

    <!-- HARƒ∞TA VE OPERASYON MERKEZƒ∞ -->
    <div
      style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 50px; align-items: center; border-top: 1px solid #eee; padding-top: 5rem;"
    >
      <div>
        <h2 style="color: #1b4332; font-size: 1.8rem; font-weight: 800;">
          Statewide Coverage
        </h2>
        <p style="color: #4b5563; line-height: 1.8;">
          ProTreeTrim‚Ñ¢ operates as a distributed digital hub. We don't believe
          in a single office; we believe in being <strong>everywhere</strong>.
        </p>
        <p style="color: #4b5563; line-height: 1.8;">
          Our virtual coordination center manages certified crews across all 67
          Florida counties. Help is just a phone call away.
        </p>
        <div
          style="margin-top: 20px; font-weight: 700; color: #166534; display: flex; align-items: center; gap: 8px;"
        >
          <span style="font-size: 1.2rem;">üìç</span> Serving All Florida Counties
          & Cities
        </div>
      </div>

      <!-- YENƒ∞ VE HATASIZ FLORIDA HARƒ∞TASI -->
      <div
        style="overflow: hidden; border-radius: 24px; border: 1px solid #e2e8f0; line-height: 0; box-shadow: 0 15px 35px rgba(0,0,0,0.08);"
      >
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3506.6666666666665!2d-81.5157535!3d27.6648274!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88c176a8d540b7b5%3A0x8b37c5c71f21f0a5!2sFlorida!5e0!3m2!1sen!2sus!4v1737470400000!5m2!1sen!2sus"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        >
        </iframe>
      </div>
    </div>
  </main>
</MainLayout>
