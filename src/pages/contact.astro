---
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';
---

<MainLayout 
  title="Contact Us | ProTreeTrim™ Florida Network" 
  description="Contact ProTreeTrim for partnership opportunities, professional inquiries, or support regarding our tree care network in Florida."
>
  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 5rem 1rem; text-align: center; border-bottom: 5px solid #f97316;">
    <h1 style="font-size: clamp(2.2rem, 8vw, 3.5rem); margin: 0; font-weight: 900; line-height: 1.1;">Get In Touch</h1>
    <p style="font-size: 1.2rem; color: #95d5b2; margin-top: 1rem;">Professional Network Support & Partnerships</p>
  </header>

  <main class="container" style="max-width: 900px; padding-top: 4rem; padding-bottom: 10rem;">
    
    <!-- HOMEOWNER CALL OUT -->
    <div style="background: #fff3e0; border: 2px solid #ffb703; padding: 2.5rem; border-radius: 24px; text-align: center; margin-bottom: 4rem;">
        <h2 style="color: #e65100; margin-top: 0; font-weight: 800;">Need Tree Services?</h2>
        <p style="color: #5d4037; font-size: 1.15rem; margin-bottom: 1.5rem;">For the fastest service, estimates, or emergency removals, please call our dispatch line directly. Our email is reserved for administrative and business inquiries only.</p>
        <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1rem 2rem; text-decoration: none; border-radius: 12px; font-weight: 900; font-size: 1.5rem; display: inline-block; box-shadow: 0 4px 12px rgba(234, 88, 12, 0.3);">
            CALL {SITE_CONFIG.phone}
        </a>
    </div>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 3rem;">
        
        <!-- PARTNERSHIPS -->
        <div>
            <h3 style="color: #064e3b; font-size: 1.5rem; font-weight: 800;">Business Partnerships</h3>
            <p style="color: #4b5563; line-height: 1.7;">Are you a licensed and insured tree care professional in Florida? We are always looking to expand our network with high-quality crews. Contact us to learn how to join the ProTreeTrim™ network.</p>
            <a href={`mailto:${SITE_CONFIG.email}`} style="color: #ea580c; font-weight: 700; text-decoration: none; font-size: 1.1rem;">{SITE_CONFIG.email}</a>
        </div>

        <!-- ADVERTISING -->
        <div>
            <h3 style="color: #064e3b; font-size: 1.5rem; font-weight: 800;">Advertising & Media</h3>
            <p style="color: #4b5563; line-height: 1.7;">For media inquiries, advertising opportunities on our directory, or feedback regarding our website, please reach out to our administrative team via email.</p>
            <a href={`mailto:${SITE_CONFIG.email}`} style="color: #ea580c; font-weight: 700; text-decoration: none; font-size: 1.1rem;">{SITE_CONFIG.email}</a>
        </div>

    </div>

    <!-- FEEDBACK SECTION -->
    <div style="margin-top: 5rem; border-top: 1px solid #eee; padding-top: 3rem; text-align: center;">
        <h3 style="color: #064e3b; font-size: 1.5rem; font-weight: 800;">Our Location</h3>
        <p style="color: #64748b;">Serving all 67 counties across the State of Florida.</p>
        <p style="color: #94a3b8; font-size: 0.9rem;">Administrative Office: Miami, FL (Not open to the public)</p>
    </div>

  </main>
</MainLayout>