---
// src/pages/about.astro
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';
import { Image } from 'astro:assets';
import teamImg from '../assets/team.jpg';
---

<MainLayout 
  title="About Us" 
  description="Learn about ProTreeTrim Florida, our mission to connect homeowners with the best licensed tree care professionals in the state."
>
  <!-- HERO SECTION -->
  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 4rem 1.5rem; text-align: center;">
    <h1 style="font-size: clamp(2.2rem, 8vw, 3.5rem); margin: 0; letter-spacing: -1.5px; font-weight: 900; line-height: 1.1;">About ProTreeTrim™</h1>
    <p style="font-size: 1.2rem; color: #95d5b2; margin-top: 1rem; font-weight: 400;">Your Trusted Florida Tree Care Connection</p>
  </header>

  <div class="container" style="max-width: 900px; margin: 0 auto; padding: 0 1.5rem;">
    
    <!-- RESPONSIVE IMAGE SECTION -->
    <div style="margin-top: 2rem; margin-bottom: 3rem; text-align: center; padding: 0 0.5rem;">
        <Image 
          src={teamImg} 
          alt="ProTreeTrim Expert Team" 
          width={1000} 
          height={540} 
          format="webp"
          style="width: 100%; height: auto; border-radius: 20px; box-shadow: 0 15px 35px rgba(0,0,0,0.12); display: block; margin: 0 auto;" 
        />
    </div>
    
    <!-- MISSION CONTENT -->
    <div style="background: white; border: 1px solid #eee; border-radius: 24px; padding: 2.5rem 1.5rem; box-shadow: 0 10px 30px rgba(0,0,0,0.03); margin-bottom: 3rem;">
      <h2 style="color: #064e3b; font-size: 1.8rem; margin-top: 0; font-weight: 800; margin-bottom: 1.5rem;">Our Mission</h2>
      <p style="font-size: 1.1rem; color: #374151; margin-bottom: 1.5rem; line-height: 1.8;">
        At <strong>ProTreeTrim</strong>, we connect homeowners across Florida with licensed, experienced tree care professionals they can trust. Our goal is to make finding reliable, high-quality tree services simple and stress-free—from routine trimming to emergency storm cleanup.
      </p>
      <p style="font-size: 1.1rem; color: #374151; margin-bottom: 0; line-height: 1.8;">
        We work with skilled professionals who understand Florida's unique local conditions and are committed to safety, precision, and long-lasting results for every property.
      </p>
    </div>

    <!-- CONTACT / FOOTER INFO -->
    <div style="background: #f8fafc; border: 1px dashed #cbd5e1; padding: 2.5rem 1.5rem; border-radius: 20px; text-align: center; margin-bottom: 6rem;">
      <p style="margin: 0; font-size: 1.1rem; color: #4b5563; line-height: 1.6;">
        Questions or partnership inquiries? Reach out to us at <br/>
        <a href={`mailto:${SITE_CONFIG.email}`} style="color: #ea580c; font-weight: 800; text-decoration: none; font-size: 1.2rem; display: inline-block; margin-top: 10px;">{SITE_CONFIG.email}</a>
      </p>
      <div style="margin-top: 2.5rem;">
          <a href="/" style="color: #64748b; text-decoration: underline; font-size: 0.95rem; font-weight: 600;">← Return to Service Locations</a>
      </div>
    </div>
  </div>
</MainLayout>