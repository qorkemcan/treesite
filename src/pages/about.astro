---
// src/pages/about.astro
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';
import { Image } from 'astro:assets';
import teamImg from '../assets/team.jpg';
---

<MainLayout 
  title="About Us" 
  description="Learn about ProTreeTrim Florida, our mission to connect homeowners with the best licensed tree care professionals in the state."
>
  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 5rem 1rem; text-align: center; border-bottom: 5px solid #f97316;">
    <h1 style="font-size: clamp(2.2rem, 7vw, 3.8rem); margin: 0; letter-spacing: -2px; font-weight: 800;">About ProTreeTrim™</h1>
    <p style="font-size: 1.3rem; color: #95d5b2; margin-top: 1rem; font-weight: 400;">Your Trusted Florida Tree Care Connection</p>
  </header>

  <div class="container" style="max-width: 850px; margin: 0 auto; padding: 4rem 1.5rem;">
    <Image 
      src={teamImg} 
      alt="ProTreeTrim Expert Team" 
      width={850} 
      height={450} 
      format="webp"
      style="width: 100%; border-radius: 24px; box-shadow: 0 15px 35px rgba(0,0,0,0.12); margin-bottom: 3rem;" 
    />
    
    <div style="background: white; border: 1px solid #e5e7eb; border-radius: 24px; padding: 2.5rem; box-shadow: 0 10px 30px rgba(0,0,0,0.05); margin-bottom: 3rem;">
      <h2 style="color: #064e3b; font-size: 2rem; margin-top: 0; font-weight: 800;">Our Mission</h2>
      <p style="font-size: 1.15rem; color: #374151; margin-bottom: 1.5rem; line-height: 1.7;">At <strong>ProTreeTrim</strong>, we connect homeowners across Florida with licensed, experienced tree care professionals they can trust. Our goal is to make finding reliable, high-quality tree services simple and stress-free—from routine trimming to emergency storm cleanup.</p>
      <p style="font-size: 1.15rem; color: #374151; margin-bottom: 0; line-height: 1.7;">We work with skilled professionals who understand Florida's unique local conditions and are committed to safety, precision, and long-lasting results for every property.</p>
    </div>

    <div style="background: #f8fafc; border: 1px dashed #cbd5e1; padding: 2rem; border-radius: 20px; text-align: center;">
      <p style="margin: 0; font-size: 1.1rem; color: #4b5563;">
        Questions or partnership inquiries? Reach out to us at <br/>
        <a href={`mailto:${SITE_CONFIG.email}`} style="color: #ea580c; font-weight: 700; text-decoration: none; font-size: 1.2rem;">{SITE_CONFIG.email}</a>
      </p>
      <div style="margin-top: 2rem;">
          <a href="/" style="color: #64748b; text-decoration: underline; font-size: 0.95rem;">← Return to Service Locations</a>
      </div>
    </div>
  </div>
</MainLayout>