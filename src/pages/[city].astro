---
import fs from 'node:fs';
import path from 'node:path';
import { parse } from 'csv-parse/sync';
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';

// 1. Astro Image Bile≈üeni
import { Image } from 'astro:assets';
import teamImg from '../assets/team.jpg'; // Resmin src/assets/team.jpg yolunda olduƒüundan emin ol

export async function getStaticPaths() {
  const filePath = path.resolve('./src/data/cities.csv');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  const records = parse(fileContent, { columns: true, skip_empty_lines: true, bom: true });
  return records.map((row: any) => ({
    params: { city: `tree-removal-${row.City.toLowerCase().replace(/\s+/g, '-')}` },
    props: { cityData: row },
  }));
}
const { cityData } = Astro.props as { cityData: any };

// ƒ∞√ß Linkleme Hazƒ±rlƒ±ƒüƒ±
const nearby = cityData.NearbyCities ? cityData.NearbyCities.split(',').map(c => c.trim()) : [];
const treeType = cityData.MainTreeType || 'native Florida trees';

// --- AKILLI YORUM HAVUZU ---
const reviewPool = [
  { name: "Michael R.", text: `Top-notch service in ${cityData.City}! They handled a massive oak tree removal with zero issues. Highly recommend.` },
  { name: "Linda G.", text: `Best prices I found in ${cityData.County} County. The team was punctual and left my yard cleaner than they found it.` },
  { name: "David S.", text: `Fast emergency response after the storm. They were in ${cityData.City} within hours to clear the fallen branches.` },
  { name: "Jennifer W.", text: `Expert palm trimming. My property in ${cityData.City} looks 100% better. Professional and polite crew.` },
  { name: "Chris B.", text: `Great stump grinding service. They have the right equipment and the expertise for ${cityData.City} soil conditions.` },
  { name: "Amanda K.", text: `I've used several tree services in Florida, but this ${cityData.City} team is by far the most reliable.` }
];

const citySeed = cityData.City.length;
const review1 = reviewPool[citySeed % reviewPool.length];
const review2 = reviewPool[(citySeed + 3) % reviewPool.length];

// SEO ≈ûemasƒ±
const schemaData = {
  "@context": "https://schema.org",
  "@type": "TreeCare",
  "name": `ProTreeTrim ${cityData.City}`,
  "description": cityData.Description,
  "telephone": SITE_CONFIG.phone,
  "areaServed": { "@type": "City", "name": cityData.City },
  "address": { "@type": "PostalAddress", "addressLocality": cityData.City, "addressRegion": "FL" }
};
---

<MainLayout 
  title={`${cityData.City} Tree Removal & Trimming | Local ${treeType} Experts`}
  description={cityData.Description}
  badgeText={`‚úì FULLY LICENSED & INSURED IN ${cityData.County.toUpperCase()} COUNTY ‚Ä¢ 24/7 RESPONSE`}
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} slot="head" />

  <!-- A. HEADER -->
  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 5rem 1rem; text-align: center; border-bottom: 5px solid #f97316;">
    <div style="max-width: 850px; margin: 0 auto;">
      <div style="font-size: 1.2rem; margin-bottom: 1.5rem; color: #ffb703;">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê <span style="color: white; font-weight: 600; margin-left: 10px;">Top-Rated Local Experts</span></div>
      <h1 style="margin: 0; font-size: clamp(2rem, 8vw, 3.6rem); letter-spacing: -1.5px; line-height: 1.1; font-weight: 800; color: white;">
        Expert Tree Removal & Services in {cityData.City}
      </h1>
      <p style="font-size: 1.4rem; margin-top: 1.5rem; color: #95d5b2; font-weight: 300;">Florida's Trusted Certified Arborists Specializing in {treeType}</p>
    </div>
  </header>

  <main style="max-width: 1000px; margin: -3rem auto 4rem; padding: 0 1.5rem; position: relative; z-index: 10;">
    
    <!-- B. ANA CTA KARTI -->
    <div style="background: white; padding: 3rem 1.5rem; border-radius: 24px; text-align: center; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15); border: 1px solid #e5e7eb;">
      <h3 style="margin-top: 0; color: #064e3b; font-size: 1.8rem; font-weight: 800;">Need a Fast Estimate?</h3>
      <p style="color: #4b5563; margin-bottom: 2rem; font-size: 1.1rem;">Call our local {cityData.City} connection line for a free quote.</p>
      <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1.4rem; text-decoration: none; border-radius: 16px; font-weight: 900; font-size: clamp(1.4rem, 6vw, 2.2rem); display: block; box-shadow: 0 10px 25px rgba(234, 88, 12, 0.3); border: 2px solid #fdba74; white-space: nowrap;">{SITE_CONFIG.phone}</a>
    </div>

    <!-- C. EKƒ∞P FOTOSU (Optimize Edilmi≈ü) -->
    <section style="margin-top: 4rem;">
      <Image 
        src={teamImg} 
        alt={`Licensed tree experts serving ${cityData.City}`} 
        width={1000} 
        height={540}
        format="webp"
        style="width: 100%; height: auto; border-radius: 24px; box-shadow: 0 15px 30px rgba(0,0,0,0.1);"
      />
      <p style="text-align: center; font-size: 0.95rem; color: #666; margin-top: 15px; font-style: italic;">Licensed professionals serving homeowners in {cityData.City} and throughout {cityData.County} County.</p>
    </section>

    <!-- D. 2'Lƒ∞ Bƒ∞LGƒ∞ KUTULARI -->
    <section style="margin-top: 3rem; display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px;">
        <div style="background: #f8fafc; padding: 2rem; border-radius: 15px; border: 1px solid #f1f5f9;">
            <h4 style="color: #064e3b; margin-top: 0; font-weight: 800;">Local Service Area</h4>
            <p style="font-size: 0.95rem; color: #64748b; margin: 0;">Providing rapid response for <strong>{cityData.City}</strong> and the entire <strong>{cityData.County}</strong> County area. We coordinate with local crews who understand Florida's unique landscape needs.</p>
        </div>
        <div style="background: #f8fafc; padding: 2rem; border-radius: 15px; border: 1px solid #f1f5f9;">
            <h4 style="color: #064e3b; margin-top: 0; font-weight: 800;">Safety & Compliance</h4>
            <p style="font-size: 0.95rem; color: #64748b; margin: 0;">All connected specialists follow professional safety protocols. Whether it's high-risk removals or routine pruning, we ensure {cityData.City} standards are met.</p>
        </div>
    </section>

    <!-- E. DINAMIK YORUMLAR -->
    <section style="margin-top: 4rem;">
      <h2 style="text-align: center; color: #064e3b; font-size: 2rem; font-weight: 800; margin-bottom: 2rem;">Recent Feedback from {cityData.City}</h2>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
        <div style="background: #fff; padding: 1.5rem; border-radius: 16px; border: 1px solid #eee; box-shadow: 0 4px 6px rgba(0,0,0,0.02);">
          <div style="color: #fbbf24; font-size: 1.2rem; margin-bottom: 10px;">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>
          <p style="font-style: italic; color: #4b5563;">"{review1.text}"</p>
          <p style="margin-top: 15px; font-weight: 700; color: #1b4332; font-size: 0.9rem;">‚Äî {review1.name}, {cityData.City} Resident</p>
        </div>
        <div style="background: #fff; padding: 1.5rem; border-radius: 16px; border: 1px solid #eee; box-shadow: 0 4px 6px rgba(0,0,0,0.02);">
          <div style="color: #fbbf24; font-size: 1.2rem; margin-bottom: 10px;">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>
          <p style="font-style: italic; color: #4b5563;">"{review2.text}"</p>
          <p style="margin-top: 15px; font-weight: 700; color: #1b4332; font-size: 0.9rem;">‚Äî {review2.name}, {cityData.City} Resident</p>
        </div>
      </div>
    </section>

    <!-- F. NEARBY CITIES (ƒ∞√ß Linkleme) -->
    {nearby.length > 0 && (
      <section style="margin-top: 4rem; padding: 2.5rem; background: #f0fdf4; border-radius: 24px; text-align: center; border: 1px solid #dcfce7;">
        <h3 style="color: #064e3b; margin-bottom: 1.5rem; font-weight: 800;">Other Service Areas Near {cityData.City}</h3>
        <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 12px;">
          {nearby.map((nearbyCity) => (
            <a 
              href={`/tree-removal-${nearbyCity.toLowerCase().replace(/\s+/g, '-')}`}
              style="background: white; padding: 8px 18px; border-radius: 50px; border: 1px solid #bbf7d0; color: #166534; text-decoration: none; font-weight: 700; font-size: 0.85rem; transition: 0.2s;"
              onmouseover="this.style.backgroundColor='#dcfce7'"
              onmouseout="this.style.backgroundColor='white'"
            >
              Tree Removal in {nearbyCity}
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- G. 4'L√ú SERVƒ∞S KARTLARI -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem; margin-top: 4rem;">
      <div style="background: white; padding: 2rem; border-radius: 16px; border: 1px solid #f3f4f6; text-align: center; box-shadow: 0 4px 6px rgba(0,0,0,0.01);"><div style="font-size: 2.5rem; margin-bottom: 10px;">üõ°Ô∏è</div><h4 style="color: #064e3b; font-weight:800; margin: 5px 0;">Fully Insured</h4><p style="font-size: 0.85rem; color: #666;">Protection for your home.</p></div>
      <div style="background: white; padding: 2rem; border-radius: 16px; border: 1px solid #f3f4f6; text-align: center; box-shadow: 0 4px 6px rgba(0,0,0,0.01);"><div style="font-size: 2.5rem; margin-bottom: 10px;">üå™Ô∏è</div><h4 style="color: #064e3b; font-weight:800; margin: 5px 0;">Storm Prep</h4><p style="font-size: 0.85rem; color: #666;">Emergency response.</p></div>
      <div style="background: white; padding: 2rem; border-radius: 16px; border: 1px solid #f3f4f6; text-align: center; box-shadow: 0 4px 6px rgba(0,0,0,0.01);"><div style="font-size: 2.5rem; margin-bottom: 10px;">üå≥</div><h4 style="color: #064e3b; font-weight:800; margin: 5px 0;">Certified Pros</h4><p style="font-size: 0.85rem; color: #666;">Expert workmanship.</p></div>
      <div style="background: white; padding: 2rem; border-radius: 16px; border: 1px solid #f3f4f6; text-align: center; box-shadow: 0 4px 6px rgba(0,0,0,0.01);"><div style="font-size: 2.5rem; margin-bottom: 10px;">üèóÔ∏è</div><h4 style="color: #064e3b; font-weight:800; margin: 5px 0;">Stump Grinding</h4><p style="font-size: 0.85rem; color: #666;">Complete land clearing.</p></div>
    </div>

    <!-- H. FAQ B√ñL√úM√ú -->
    <section style="margin-top: 5rem; margin-bottom: 2rem;">
      <h2 style="text-align: center; color: #064e3b; font-size: 2rem; font-weight: 800; margin-bottom: 2.5rem;">Frequently Asked Questions</h2>
      <div style="max-width: 850px; margin: 0 auto; display: flex; flex-direction: column; gap: 15px;">
        <div style="background: white; padding: 1.5rem; border-radius: 16px; border: 1px solid #e5e7eb;">
          <h4 style="margin: 0; color: #1b4332; font-size: 1.15rem; font-weight: 700;">How can I get an estimate for tree removal in {cityData.City}?</h4>
          <p style="margin-top: 10px; color: #4b5563; line-height: 1.6;">Simply call our local connection line. We will link you with a qualified professional in the {cityData.City} area for a free, no-obligation on-site assessment.</p>
        </div>
        <div style="background: white; padding: 1.5rem; border-radius: 16px; border: 1px solid #e5e7eb;">
          <h4 style="margin: 0; color: #1b4332; font-size: 1.15rem; font-weight: 700;">Are the tree specialists licensed?</h4>
          <p style="margin-top: 10px; color: #4b5563; line-height: 1.6;">Yes, all experts in our network are required to maintain current licensing and insurance according to Florida state regulations for tree care services.</p>
        </div>
      </div>
    </section>

    <!-- I. AI A√áIKLAMA -->
    <section style="margin-top: 6rem; border-top: 1px solid #eee; padding-top: 4rem;">
      <h2 style="color: #064e3b; font-size: 1.8rem; margin-bottom: 1.5rem; text-align: center; font-weight: 800;">Reliable Tree Care for {cityData.City} Residents</h2>
      <div style="background: #f9fafb; border-radius: 20px; padding: 2.5rem; border: 1px solid #e5e7eb; line-height: 1.9;">
        <p style="font-size: 1.15rem; color: #4b5563; margin: 0; white-space: pre-line;">
          In <strong>{cityData.City}</strong>, maintaining healthy <strong>{treeType}</strong> is essential for property value and storm safety. {cityData.Description}
        </p>
      </div>
    </section>

  </main>
</MainLayout>