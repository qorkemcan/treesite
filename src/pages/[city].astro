---
import fs from 'node:fs';
import path from 'node:path';
import { parse } from 'csv-parse/sync';
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';

export async function getStaticPaths() {
  const filePath = path.resolve('./src/data/cities.csv');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  const records = parse(fileContent, { columns: true, skip_empty_lines: true, bom: true });
  return records.map((row: any) => ({
    params: { city: `tree-removal-${row.City.toLowerCase().replace(/\s+/g, '-')}` },
    props: { cityData: row },
  }));
}
const { cityData } = Astro.props as { cityData: any };

// --- AKILLI YORUM HAVUZU ---
const reviewPool = [
  { name: "Michael R.", text: `Top-notch service in ${cityData.City}! They handled a massive oak tree removal with zero issues. Highy recommend.` },
  { name: "Linda G.", text: `Best prices I found in ${cityData.County} County. The team was punctual and left my yard cleaner than they found it.` },
  { name: "David S.", text: `Fast emergency response after the storm. They were in ${cityData.City} within hours to clear the fallen branches.` },
  { name: "Jennifer W.", text: `Expert palm trimming. My property in ${cityData.City} looks 100% better. Professional and polite crew.` },
  { name: "Chris B.", text: `Great stump grinding service. They have the right equipment and the expertise for ${cityData.City} soil conditions.` },
  { name: "Amanda K.", text: `I've used several tree services in Florida, but this ${cityData.City} team is by far the most reliable.` }
];

// Şehir isminin uzunluğuna göre her sayfada farklı 2 yorum seçen algoritma
const citySeed = cityData.City.length;
const review1 = reviewPool[citySeed % reviewPool.length];
const review2 = reviewPool[(citySeed + 3) % reviewPool.length]; // Farklı bir yorum seçmek için +3 ekledik
---

<MainLayout 
  title={`${cityData.City} Tree Removal & Trimming | Emergency Services FL`}
  description={cityData.Description}
>
  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 5rem 1rem; text-align: center; border-bottom: 5px solid #f97316;">
    <div style="max-width: 850px; margin: 0 auto;">
      <h1 style="margin: 0; font-size: clamp(2rem, 8vw, 3.6rem); font-weight: 800; color: white;">
        Expert Tree Removal in {cityData.City}
      </h1>
      <p style="font-size: 1.4rem; margin-top: 1.5rem; color: #95d5b2; font-weight: 300;">Florida's Trusted Certified Arborists</p>
    </div>
  </header>

  <main style="max-width: 1000px; margin: -3rem auto 4rem; padding: 0 1.5rem;">
    
    <!-- CTA KARTI -->
    <div style="background: white; padding: 3rem 1.5rem; border-radius: 24px; text-align: center; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15); border: 1px solid #e5e7eb; position: relative; z-index: 10;">
      <h3 style="margin-top: 0; color: #064e3b; font-size: 1.8rem; font-weight: 800;">Get a Free Quote</h3>
      <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1.4rem; text-decoration: none; border-radius: 16px; font-weight: 900; font-size: 2.2rem; display: block; margin-top: 1rem;">{SITE_CONFIG.phone}</a>
    </div>

    <!-- DINAMIK YORUMLAR (Artık her şehirde farklı!) -->
    <section style="margin-top: 4rem;">
      <h2 style="text-align: center; color: #064e3b; font-size: 2rem; font-weight: 800; margin-bottom: 2rem;">Recent Feedback from {cityData.City} Residents</h2>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
        
        <!-- Yorum 1 -->
        <div style="background: #fff; padding: 1.5rem; border-radius: 16px; border: 1px solid #eee; box-shadow: 0 4px 6px rgba(0,0,0,0.02);">
          <div style="color: #fbbf24; font-size: 1.2rem; margin-bottom: 10px;">⭐⭐⭐⭐⭐</div>
          <p style="font-style: italic; color: #4b5563;">"{review1.text}"</p>
          <p style="margin-top: 15px; font-weight: 700; color: #1b4332; font-size: 0.9rem;">— {review1.name}, {cityData.City} Resident</p>
        </div>

        <!-- Yorum 2 -->
        <div style="background: #fff; padding: 1.5rem; border-radius: 16px; border: 1px solid #eee; box-shadow: 0 4px 6px rgba(0,0,0,0.02);">
          <div style="color: #fbbf24; font-size: 1.2rem; margin-bottom: 10px;">⭐⭐⭐⭐⭐</div>
          <p style="font-style: italic; color: #4b5563;">"{review2.text}"</p>
          <p style="margin-top: 15px; font-weight: 700; color: #1b4332; font-size: 0.9rem;">— {review2.name}, {cityData.City} Resident</p>
        </div>

      </div>
    </section>

    <!-- ... Diğer bölümler (Görsel, Bilgi Kutuları, 4'lü Kartlar) aynı kalabilir ... -->
    <!-- (Kodun kısalığı için buraya eklemedim ama senin dosyanda durmalı) -->

  </main>
</MainLayout>