---
import fs from 'node:fs';
import path from 'node:path';
import { parse } from 'csv-parse/sync';
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';

export async function getStaticPaths() {
  const filePath = path.resolve('./src/data/cities.csv');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  const records = parse(fileContent, { columns: true, skip_empty_lines: true, bom: true });
  return records.map((row: any) => ({
    params: { city: `tree-removal-${row.City.toLowerCase().replace(/\s+/g, '-')}` },
    props: { cityData: row },
  }));
}
const { cityData } = Astro.props as { cityData: any };

// JSON-LD Yerel İşletme Şeması (SEO İçin)
const schemaData = {
  "@context": "https://schema.org",
  "@type": "TreeCare", // Ağaç bakım servisi için en uygun tip
  "name": `ProTreeTrim ${cityData.City}`,
  "url": `${SITE_CONFIG.siteUrl}/tree-removal-${cityData.City.toLowerCase().replace(/\s+/g, '-')}`,
  "image": `${SITE_CONFIG.siteUrl}/team.jpg`,
  "description": cityData.Description,
  "telephone": SITE_CONFIG.phone,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": cityData.City,
    "addressRegion": "FL",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCircle",
    "itemOffered": {
      "@type": "Service",
      "name": "Tree Removal and Trimming"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": cityData.City
  },
  "openingHours": "Mo-Su 00:00-23:59" // 24/7 Hizmet vurgusu
};
---

<MainLayout 
  title={`${cityData.City} Tree Removal & Trimming | Expert Arborists`}
  description={cityData.Description}
>
  <!-- SEO: JSON-LD Şeması buraya yerleşiyor -->
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} slot="head" />

  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 5rem 1rem; text-align: center; border-bottom: 5px solid #f97316;">
    <div style="max-width: 850px; margin: 0 auto;">
      <h1 style="margin: 0; font-size: clamp(2rem, 8vw, 3.6rem); font-weight: 800;">Expert Tree Services in {cityData.City}</h1>
      <p style="font-size: 1.3rem; margin-top: 1rem; color: #95d5b2;">Licensed & Local Professionals serving {cityData.County} County</p>
    </div>
  </header>

  <main style="max-width: 1000px; margin: -3rem auto 4rem; padding: 0 1.5rem;">
    
    <!-- CTA KART -->
    <div style="background: white; padding: 3rem 1.5rem; border-radius: 24px; text-align: center; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15); border: 1px solid #e5e7eb; position: relative; z-index: 10;">
      <h3 style="margin: 0; color: #064e3b; font-size: 1.8rem;">Request Your Free Quote</h3>
      <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1.2rem; text-decoration: none; border-radius: 12px; font-weight: 900; font-size: 2.2rem; display: block; margin-top: 1.5rem;">{SITE_CONFIG.phone}</a>
    </div>

    <!-- YENİ BÖLÜM: DINAMIK YORUMLAR (TRUST SIGNALS) -->
    <section style="margin-top: 5rem;">
      <h2 style="text-align: center; color: #064e3b; font-size: 2rem; font-weight: 800; margin-bottom: 2rem;">Recent Feedback from {cityData.City}</h2>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
        
        <!-- Yorum 1 -->
        <div style="background: #fff; padding: 1.5rem; border-radius: 16px; border: 1px solid #eee; box-shadow: 0 4px 6px rgba(0,0,0,0.02);">
          <div style="color: #fbbf24; font-size: 1.2rem; margin-bottom: 10px;">⭐⭐⭐⭐⭐</div>
          <p style="font-style: italic; color: #4b5563;">"Fastest tree removal service I've seen in <strong>{cityData.City}</strong>. The crew was professional and cleaned up everything after cutting down my old oak."</p>
          <p style="margin-top: 15px; font-weight: 700; color: #1b4332; font-size: 0.9rem;">— Robert M., {cityData.City} Resident</p>
        </div>

        <!-- Yorum 2 -->
        <div style="background: #fff; padding: 1.5rem; border-radius: 16px; border: 1px solid #eee; box-shadow: 0 4px 6px rgba(0,0,0,0.02);">
          <div style="color: #fbbf24; font-size: 1.2rem; margin-bottom: 10px;">⭐⭐⭐⭐⭐</div>
          <p style="font-style: italic; color: #4b5563;">"Great prices for stump grinding. Glad I found a local team in <strong>{cityData.County}</strong> that actually answers the phone."</p>
          <p style="margin-top: 15px; font-weight: 700; color: #1b4332; font-size: 0.9rem;">— Sarah T., {cityData.City} Homeowner</p>
        </div>

      </div>
      <p style="text-align: center; margin-top: 1.5rem; font-size: 0.9rem; color: #64748b;">✅ <strong>Verified Local Service Results</strong></p>
    </section>

    <!-- EKİP FOTOSU VE AÇIKLAMA -->
    <section style="margin-top: 4rem;">
       <img src="/team.jpg" alt={`Licensed tree experts in ${cityData.City}`} style="width: 100%; height: auto; border-radius: 24px;" />
       <div style="background: white; border-radius: 20px; padding: 2.5rem; border: 1px solid #e5e7eb; margin-top: 2rem;">
          <p style="font-size: 1.25rem; color: #374151; white-space: pre-line;">{cityData.Description}</p>
       </div>
    </section>

  </main>
</MainLayout>