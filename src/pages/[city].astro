  <!-- ≈ûemalarƒ± Head Slotuna ekliyoruz -->
  <script type="application/ld+json" set:html={JSON.stringify(treeCareSchema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} slot="head" />
