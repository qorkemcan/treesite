  { name: "David S.", text: `Fast emergency response after the storm. They were in ${cityData.City} within hours to clear the fallen branches.` },
  { name: "Jennifer W.", text: `Expert palm trimming. My property in ${cityData.City} looks 100% better. Professional and polite crew.` },
  { name: "Chris B.", text: `Great stump grinding service. They have the right equipment and the expertise for ${cityData.City} soil conditions.` },
  { name: "Amanda K.", text: `I've used several tree services in Florida, but this ${cityData.City} team is by far the most reliable.` }
];

const citySeed = cityData.City.length;
const review1 = reviewPool[citySeed % reviewPool.length];
const review2 = reviewPool[(citySeed + 3) % reviewPool.length];

// --- 2. SEO ≈ûEMASI (LocalBusiness + FAQ) ---
const schemaData = {
  "@context": "https://schema.org",
  "@type": "TreeCare",
  "name": `ProTreeTrim ${cityData.City}`,
  "description": cityData.Description,
  "telephone": SITE_CONFIG.phone,
  "areaServed": { "@type": "City", "name": cityData.City },
  "address": { "@type": "PostalAddress", "addressLocality": cityData.City, "addressRegion": "FL" },
  "mainEntity": [
    {
      "@type": "Question",
      "name": `How can I get an estimate for tree removal in ${cityData.City}?`,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": `Call our local connection line at ${SITE_CONFIG.phone} to get a free, no-obligation estimate from a qualified tree professional in the ${cityData.City} area.`
      }
    },
    {
      "@type": "Question",
      "name": `Are the tree specialists licensed and insured?`,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, our network consists of local tree care specialists who maintain proper licensing and insurance for Florida state requirements."
      }
    }
  ]
};
