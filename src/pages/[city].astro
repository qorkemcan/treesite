---
import fs from 'node:fs';
import path from 'node:path';
import { parse } from 'csv-parse/sync';
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';
import { Image } from 'astro:assets';

// Florida klas√∂r√ºndeki t√ºm g√∂rselleri tara
const allImages = import.meta.glob('../assets/gallery/fl/*.{jpeg,jpg,png,gif,webp}');
const imagePaths = Object.keys(allImages);

export async function getStaticPaths() {
  const filePath = path.resolve('./src/data/cities.csv');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  const records = parse(fileContent, { columns: true, skip_empty_lines: true, bom: true });
  
  const seenCities = new Set();
  const uniqueRecords = records.filter(row => {
    const cityName = row.City.toLowerCase().trim();
    if (seenCities.has(cityName)) return false;
    seenCities.add(cityName);
    return true;
  });

  const validCities = uniqueRecords.map(r => r.City.toLowerCase());

  return uniqueRecords.map((row: any) => ({
    params: { city: `tree-removal-${row.City.toLowerCase().replace(/\s+/g, '-')}` },
    props: { 
      cityData: row,
      validCities: validCities 
    },
  }));
}

const { cityData, validCities } = Astro.props;

// ≈ûehir ismine g√∂re tutarlƒ± g√∂rsel se√ßimi
const imageIndex = Math.abs(cityData.City.split('').reduce((acc, char) => acc + char.charCodeAt(0), 0)) % imagePaths.length;
const selectedImageImport = allImages[imagePaths[imageIndex]];
// @ts-ignore
const selectedImage = (await selectedImageImport()).default;

const nearby = cityData.NearbyCities 
  ? cityData.NearbyCities.split(',').map(c => c.trim()).filter(c => validCities.includes(c.toLowerCase())) : [];

const treeType = cityData.MainTreeType || 'native Florida trees';
const populationFormatted = Number(cityData.Population).toLocaleString();
const focusService = cityData.FocusService || "Tree Removal & Trimming";
const landmark = cityData.Landmark || "the local community";

// Zengin Yorum Havuzu
const reviewPool = [
  { name: "John D.", text: `Amazing ${focusService} in ${cityData.City}! They handled everything near ${landmark} perfectly.` },
  { name: "Sarah W.", text: `Best tree care prices I found in ${cityData.County} County. The crew was professional and punctual.` },
  { name: "Michael B.", text: `Fast emergency response near ${landmark}. They were at my house within hours after the storm.` },
  { name: "Emily R.", text: `Expert care for our ${treeType}. Our property looks 100% better now. Highly recommend!` },
  { name: "Robert K.", text: `Very knowledgeable about Florida species. They saved our sick oaks near ${landmark}.` },
  { name: "Jessica M.", text: `Safe, licensed, and insured. Peace of mind is worth everything for tree work in ${cityData.City}.` }
];
const review1 = reviewPool[cityData.City.length % reviewPool.length];
const review2 = reviewPool[(cityData.City.length * 2) % reviewPool.length];

// --- SEO ≈ûEMALARI (JSON-LD) ---

// 1. TreeCare Local Business Schema
const treeCareSchema = {
  "@context": "https://schema.org",
  "@type": "TreeCare",
  "name": `ProTreeTrim ${cityData.City}`,
  "description": cityData.Description,
  "telephone": SITE_CONFIG.phone,
  "areaServed": { "@type": "City", "name": cityData.City }
};

// 2. FAQ Schema (Arama sonu√ßlarƒ±nda yer kaplamak i√ßin)
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": `How much does tree removal cost in ${cityData.City}?`,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": `Tree removal costs in ${cityData.City} depend on tree size and location. We provide free, no-obligation on-site estimates for all ${cityData.County} County residents.`
      }
    },
    {
      "@type": "Question",
      "name": `Are you available for emergency tree services in ${cityData.City}?`,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": `Yes, our network provides 24/7 emergency storm response across ${cityData.City} and the surrounding area near ${landmark}.`
      }
    }
  ]
};

// 3. Breadcrumb Schema (Google arama yolunu g√ºzelle≈ütirmek i√ßin)
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Florida Tree Care", "item": SITE_CONFIG.siteUrl },
    { "@type": "ListItem", "position": 2, "name": cityData.City, "item": `${SITE_CONFIG.siteUrl}/tree-removal-${cityData.City.toLowerCase().replace(/\s+/g, '-')}` }
  ]
};

// CTR OPTƒ∞Mƒ∞ZE EDƒ∞LMƒ∞≈û BA≈ûLIK (Title)
const optimizedTitle = `#1 Tree Service in ${cityData.City} | Licensed & Insured | ProTreeTrim‚Ñ¢`;
