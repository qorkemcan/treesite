---
import fs from 'node:fs';
import path from 'node:path';
import { parse } from 'csv-parse/sync';
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';

// 1. Astro Image Bileşeni ve Resmi Import Et
import { Image } from 'astro:assets';
import teamImg from '../assets/team.jpg'; // Resmi src/assets içine taşıdığını varsayıyoruz

export async function getStaticPaths() {
  const filePath = path.resolve('./src/data/cities.csv');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  const records = parse(fileContent, { columns: true, skip_empty_lines: true, bom: true });
  return records.map((row: any) => ({
    params: { city: `tree-removal-${row.City.toLowerCase().replace(/\s+/g, '-')}` },
    props: { cityData: row },
  }));
}
const { cityData } = Astro.props as { cityData: any };

// Yakın şehirleri diziye çevir (İç Linkleme İçin)
const nearby = cityData.NearbyCities ? cityData.NearbyCities.split(',').map(c => c.trim()) : [];

// --- AKILLI YORUM HAVUZU --- (Aynı kalıyor)
const reviewPool = [
  { name: "Michael R.", text: `Top-notch service in ${cityData.City}! They handled a massive oak tree removal with zero issues. Highly recommend.` },
  { name: "Linda G.", text: `Best prices I found in ${cityData.County} County. The team was punctual and left my yard cleaner than they found it.` },
  { name: "David S.", text: `Fast emergency response after the storm. They were in ${cityData.City} within hours to clear the fallen branches.` },
  { name: "Jennifer W.", text: `Expert palm trimming. My property in ${cityData.City} looks 100% better. Professional and polite crew.` }
];
const citySeed = cityData.City.length;
const review1 = reviewPool[citySeed % reviewPool.length];
const review2 = reviewPool[(citySeed + 3) % reviewPool.length];
---

<MainLayout 
  title={`${cityData.City} Tree Removal & Trimming | Local ${cityData.MainTreeType || 'Tree'} Experts`}
  description={cityData.Description}
>
  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 5rem 1rem; text-align: center; border-bottom: 5px solid #f97316;">
    <div style="max-width: 850px; margin: 0 auto;">
      <h1 style="margin: 0; font-size: clamp(2rem, 8vw, 3.6rem); font-weight: 800;">Expert Tree Care in {cityData.City}</h1>
      <p style="font-size: 1.4rem; margin-top: 1.5rem; color: #95d5b2;">Specializing in <strong>{cityData.MainTreeType || 'Native Florida Trees'}</strong></p>
    </div>
  </header>

  <main style="max-width: 1000px; margin: -3rem auto 4rem; padding: 0 1.5rem; position: relative; z-index: 10;">
    
    <!-- CTA KARTI -->
    <div style="background: white; padding: 3rem 1.5rem; border-radius: 24px; text-align: center; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15); border: 1px solid #e5e7eb;">
      <h3 style="margin-top: 0; color: #064e3b; font-size: 1.8rem;">Need a Fast Estimate?</h3>
      <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1.4rem; text-decoration: none; border-radius: 16px; font-weight: 900; font-size: 2.2rem; display: block; margin-top: 1rem;">{SITE_CONFIG.phone}</a>
    </div>

    <!-- 2. OPTİMİZE EDİLMİŞ RESİM (Image Bileşeni) -->
    <section style="margin-top: 4rem;">
      <Image 
        src={teamImg} 
        alt={`Licensed tree experts serving ${cityData.City}`} 
        width={1000} 
        height={500}
        format="webp"
        class="rounded-image"
        style="width: 100%; height: auto; border-radius: 24px; box-shadow: 0 15px 30px rgba(0,0,0,0.1);"
      />
    </section>

    <!-- ... Yorumlar ve Diğer Bölümler ... -->

    <!-- 3. İÇ LİNKLEME (NEARBY CITIES) -->
    {nearby.length > 0 && (
      <section style="margin-top: 5rem; padding: 3rem; background: #f8fafc; border-radius: 24px; text-align: center;">
        <h3 style="color: #064e3b; margin-bottom: 1.5rem;">Other Service Areas Near {cityData.City}</h3>
        <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 15px;">
          {nearby.map((nearbyCity) => (
            <a 
              href={`/tree-removal-${nearbyCity.toLowerCase().replace(/\s+/g, '-')}`}
              style="background: white; padding: 10px 20px; border-radius: 50px; border: 1px solid #e5e7eb; color: #1b4332; text-decoration: none; font-weight: 600; font-size: 0.9rem;"
            >
              Tree Removal in {nearbyCity}
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- AI DESCRIPTION -->
    <section style="margin-top: 6rem; border-top: 1px solid #eee; padding-top: 4rem;">
       <h2 style="text-align: center; font-weight: 800; color: #064e3b;">Reliable Tree Care for {cityData.City} Residents</h2>
       <div style="background: #f9fafb; border-radius: 20px; padding: 2.5rem; border: 1px solid #e5e7eb; line-height: 1.9;">
         <p style="font-size: 1.15rem; color: #4b5563; margin: 0; white-space: pre-line;">
           In <strong>{cityData.City}</strong>, maintaining healthy <strong>{cityData.MainTreeType}</strong> is essential for property value and storm safety. {cityData.Description}
         </p>
       </div>
    </section>

  </main>
</MainLayout>