---
import fs from 'node:fs';
import path from 'node:path';
import { parse } from 'csv-parse/sync';
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';

export async function getStaticPaths() {
  const filePath = path.resolve('./src/data/cities.csv');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  const records = parse(fileContent, { columns: true, skip_empty_lines: true, bom: true });
  return records.map((row: any) => ({
    params: { city: `tree-removal-${row.City.toLowerCase().replace(/\s+/g, '-')}` },
    props: { cityData: row },
  }));
}
const { cityData } = Astro.props as { cityData: any };
---

<MainLayout 
  title={`${cityData.City} Tree Removal & Trimming`} 
  description={cityData.Description}
  badgeText={`âœ“ FULLY LICENSED & INSURED IN ${cityData.County.toUpperCase()} COUNTY`}
>
  <header>
    <div style="max-width: 850px; margin: 0 auto;">
      <h1 style="font-size: clamp(2rem, 8vw, 3.6rem); font-weight: 800;">Expert Tree Services in {cityData.City}</h1>
      <p style="font-size: 1.4rem; color: #95d5b2;">Florida's Trusted Certified Arborists</p>
    </div>
  </header>

  <main class="container" style="margin-top: -3rem; position: relative; z-index: 10;">
    <div style="background: white; padding: 3rem 1.5rem; border-radius: 24px; text-align: center; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15); border: 1px solid #e5e7eb;">
      <h3 style="color: #064e3b; font-size: 1.8rem; font-weight: 800;">Need a Fast Estimate?</h3>
      <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1.4rem; text-decoration: none; border-radius: 16px; font-weight: 900; font-size: 2rem; display: block; margin-top: 1rem;">{SITE_CONFIG.phone}</a>
    </div>

    <section style="margin: 4rem 0;">
      <img src="/team.jpg" alt="Tree Experts" style="width: 100%; border-radius: 24px;" />
      <div style="background: white; border-radius: 20px; padding: 2.5rem; margin-top: 2rem; border: 1px solid #e5e7eb;">
        <p style="font-size: 1.2rem; white-space: pre-line;">{cityData.Description}</p>
      </div>
    </section>
  </main>
</MainLayout>