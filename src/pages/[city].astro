---
import fs from 'node:fs';
import path from 'node:path';
import { parse } from 'csv-parse/sync';
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';
import { Image } from 'astro:assets';
import teamImg from '../assets/team.jpg';

export async function getStaticPaths() {
  const filePath = path.resolve('./src/data/cities.csv');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  const records = parse(fileContent, { columns: true, skip_empty_lines: true, bom: true });
  
  // CSV'deki tüm geçerli şehir isimlerini küçük harf olarak bir listeye alalım
  const validCities = records.map(r => r.City.toLowerCase());

  return records.map((row: any) => ({
    params: { city: `tree-removal-${row.City.toLowerCase().replace(/\s+/g, '-')}` },
    props: { 
      cityData: row,
      validCities: validCities // Bu listeyi props olarak aşağıya gönderiyoruz
    },
  }));
}

const { cityData, validCities } = Astro.props;

// --- AKILLI FİLTRELEME MANTIĞI ---
// Yakın şehirleri al, ama sadece CSV'de satırı olanları filtrele!
const nearby = cityData.NearbyCities 
  ? cityData.NearbyCities.split(',')
      .map(c => c.trim())
      .filter(c => validCities.includes(c.toLowerCase())) // SADECE VAR OLAN ŞEHİRLER
  : [];

const treeType = cityData.MainTreeType || 'native Florida trees';

// Akıllı Yorumlar (Aynı kalıyor)
const reviewPool = [
  { name: "Michael R.", text: `Top-notch service in ${cityData.City}! They handled a massive oak tree removal with zero issues. Highly recommend.` },
  { name: "Linda G.", text: `Best prices I found in ${cityData.County} County. The team was punctual and left my yard cleaner than they found it.` },
  { name: "David S.", text: `Fast emergency response after the storm. They were in ${cityData.City} within hours to clear the fallen branches.` },
  { name: "Jennifer W.", text: `Expert palm trimming. My property in ${cityData.City} looks 100% better. Professional and polite crew.` }
];
const review1 = reviewPool[cityData.City.length % reviewPool.length];
const review2 = reviewPool[(cityData.City.length + 2) % reviewPool.length];

// SEO Şeması (Aynı kalıyor)
const schemaData = {
  "@context": "https://schema.org",
  "@type": "TreeCare",
  "name": `ProTreeTrim ${cityData.City}`,
  "description": cityData.Description,
  "telephone": SITE_CONFIG.phone,
  "areaServed": { "@type": "City", "name": cityData.City }
};
---

<MainLayout title={`${cityData.City} Tree Removal & Trimming | ${treeType} Pros`} description={cityData.Description}>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} slot="head" />

  <header style="background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 5rem 1rem; text-align: center; border-bottom: 5px solid #f97316;">
    <div class="container">
      <div style="font-size: 1.2rem; margin-bottom: 1.5rem; color: #ffb703;">⭐⭐⭐⭐⭐ <span style="color: white; font-weight: 600; margin-left: 10px;">Top-Rated Local Experts</span></div>
      <h1 style="margin: 0; font-size: clamp(2rem, 8vw, 3.6rem); font-weight: 800;">Expert Tree Services in {cityData.City}</h1>
      <p style="font-size: 1.4rem; margin-top: 1.5rem; color: #95d5b2;">Specializing in <strong>{treeType}</strong> & Certified Care</p>
    </div>
  </header>

  <main class="container" style="margin-top: -3rem; position: relative; z-index: 10;">
    <!-- CTA KARTI -->
    <div style="background: white; padding: 3rem 1.5rem; border-radius: 24px; text-align: center; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15); border: 1px solid #e5e7eb;">
      <h3 style="margin-top: 0; color: #064e3b; font-size: 1.8rem; font-weight: 800;">Need a Fast Estimate?</h3>
      <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1.4rem; text-decoration: none; border-radius: 16px; font-weight: 900; font-size: clamp(1.4rem, 6vw, 2.2rem); display: block;">{SITE_CONFIG.phone}</a>
    </div>

    <!-- EKİP FOTOSU -->
    <section style="margin-top: 4rem;">
      <Image src={teamImg} alt={`Tree professionals in ${cityData.City}`} width={1000} height={540} format="webp" style="width: 100%; border-radius: 24px; box-shadow: 0 15px 30px rgba(0,0,0,0.1);" />
    </section>

    <!-- DINAMIK YORUMLAR -->
    <section style="margin-top: 4rem;">
      <h2 style="text-align: center; color: #064e3b; font-size: 2rem; font-weight: 800; margin-bottom: 2rem;">Feedback from {cityData.City}</h2>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
        <div style="background: #fff; padding: 1.5rem; border-radius: 16px; border: 1px solid #eee;"><p>"{review1.text}"</p><strong>— {review1.name}</strong></div>
        <div style="background: #fff; padding: 1.5rem; border-radius: 16px; border: 1px solid #eee;"><p>"{review2.text}"</p><strong>— {review2.name}</strong></div>
      </div>
    </section>

    <!-- NEARBY CITIES (ARTIK HATASIZ!) -->
    {nearby.length > 0 && (
      <section style="margin-top: 4rem; padding: 2.5rem; background: #f0fdf4; border-radius: 24px; text-align: center; border: 1px solid #dcfce7;">
        <h3 style="color: #064e3b; margin-bottom: 1.5rem; font-weight: 800;">Service Areas Near {cityData.City}</h3>
        <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 12px;">
          {nearby.map((c) => (
            <a href={`/tree-removal-${c.toLowerCase().replace(/\s+/g, '-')}`} style="background: white; padding: 8px 18px; border-radius: 50px; border: 1px solid #bbf7d0; color: #166534; text-decoration: none; font-weight: 700; font-size: 0.85rem;">
              Tree Removal in {c}
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- AI DESCRIPTION -->
    <section style="margin-top: 6rem; border-top: 1px solid #eee; padding-top: 4rem;">
      <h2 style="color: #064e3b; text-align: center; font-weight: 800;">Tree Care for {cityData.City} Residents</h2>
      <div style="background: #f9fafb; border-radius: 20px; padding: 2.5rem; border: 1px solid #e5e7eb;">
        <p style="font-size: 1.15rem; color: #4b5563;">In <strong>{cityData.City}</strong>, maintaining healthy <strong>{treeType}</strong> is essential. {cityData.Description}</p>
      </div>
    </section>
  </main>
</MainLayout>