---
import fs from 'node:fs';
import path from 'node:path';
import { parse } from 'csv-parse/sync';
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_CONFIG } from '../config.js';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const filePath = path.resolve('./src/data/cities.csv');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  const records = parse(fileContent, { columns: true, skip_empty_lines: true, bom: true });

  // Vercel 2048 limitine takƒ±lmamak i√ßin en iyi 3 hizmeti se√ßiyoruz
  const services = [
    { slug: 'tree-removal', name: 'Tree Removal', icon: 'üå≥' },
    { slug: 'stump-grinding', name: 'Stump Grinding', icon: 'üèóÔ∏è' },
    { slug: 'emergency-service', name: 'Emergency Tree Service', icon: 'üå™Ô∏è' }
  ];

  const paths = [];
  // ƒ∞lk 650 ≈üehri alƒ±yoruz (Vercel limit korumasƒ±)
  const limitedRecords = records.slice(0, 650);

  const seenPaths = new Set();

  limitedRecords.forEach((row) => {
    const citySlug = row.City.toLowerCase().trim().replace(/\s+/g, '-');
    
    services.forEach((service) => {
      const fullPath = `${service.slug}-${citySlug}`;
      if (!seenPaths.has(fullPath)) {
        seenPaths.add(fullPath);
        paths.push({
          params: { service: service.slug, city: citySlug },
          props: { cityData: row, serviceInfo: service },
        });
      }
    });
  });

  return paths;
}

const { cityData, serviceInfo } = Astro.props;

// G√∂rsel sistemi
const allImages = import.meta.glob('../assets/gallery/fl/*.{jpeg,jpg,png,gif,webp}');
const imagePaths = Object.keys(allImages);
const imageIndex = Math.abs((cityData.City + serviceInfo.slug).split('').reduce((acc, char) => acc + char.charCodeAt(0), 0)) % imagePaths.length;
const selectedImageImport = allImages[imagePaths[imageIndex]];
// @ts-ignore
const selectedImage = (await selectedImageImport()).default;

const treeType = cityData.MainTreeType || 'native Florida trees';
const landmark = cityData.Landmark || "the local community";

// SEO ≈ûEMALARI
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": `${serviceInfo.name} in ${cityData.City}`,
  "provider": { "@type": "LocalBusiness", "name": SITE_CONFIG.brandName },
  "areaServed": { "@type": "City", "name": cityData.City },
  "description": cityData.Description
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": `Do you offer ${serviceInfo.name} near ${landmark}?`,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": `Yes, our network of certified arborists provides professional ${serviceInfo.name} services throughout ${cityData.City}, including areas near ${landmark}.`
      }
    }
  ]
};

const optimizedTitle = `#1 ${serviceInfo.name} in ${cityData.City}, FL | Licensed & Insured`;
---

<MainLayout title={optimizedTitle} description={cityData.Description}>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} slot="head" />

  <header style="background: linear-gradient(135deg, #064e3b 0%, #022c22 100%); color: white; padding: 5rem 1rem; text-align: center; border-bottom: 5px solid #f97316;">
    <div class="container">
      <div style="font-size: 1.1rem; margin-bottom: 1.5rem; color: #ffb703; font-weight: 700; text-transform: uppercase;">Top-Rated in {cityData.County} County</div>
      <h1 style="margin: 0; font-size: clamp(2rem, 8vw, 3.5rem); font-weight: 900; line-height: 1.1;">{cityData.City} {serviceInfo.name}</h1>
      <p style="font-size: 1.4rem; margin-top: 1.5rem; color: #95d5b2; max-width: 800px; margin-left: auto; margin-right: auto;">Serving {cityData.City} residents with expert care for {treeType}.</p>
    </div>
  </header>

  <main class="container" style="max-width: 1000px; margin: -3rem auto 0; padding: 0 1.5rem; position: relative; z-index: 10;">
    
    <div style="background: white; padding: 3rem 1.5rem; border-radius: 24px; text-align: center; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15); border: 1px solid #e5e7eb;">
      <h3 style="margin-top: 0; color: #064e3b; font-size: 1.8rem; font-weight: 800;">Get a Free Estimate</h3>
      <p style="color: #4b5563; margin-bottom: 2rem;">Call our local connection line for <strong>{serviceInfo.name}</strong> in {cityData.City}.</p>
      <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; padding: 1.4rem; text-decoration: none; border-radius: 16px; font-weight: 900; font-size: clamp(1.4rem, 6vw, 2.2rem); display: block; box-shadow: 0 10px 25px rgba(234, 88, 12, 0.3); border: 2px solid #fdba74;">{SITE_CONFIG.phone}</a>
    </div>

    <!-- Canlƒ± Hava Durumu -->
    <section style="margin-top: 4rem;">
        <div style="background: #064e3b; padding: 1.5rem; border-radius: 24px; color: white;">
            <a class="weatherwidget-io" href={`https://forecast7.com/en/27d66n81d52/florida/?unit=us`} data-label_1={cityData.City} data-label_2="WEATHER REPORT" data-font="Inter" data-icons="Climacons Animated" data-theme="pure" data-basecolor="#064e3b" data-textcolor="#ffffff" data-highcolor="#ffb703" data-lowcolor="#95d5b2" >{cityData.City} WEATHER</a>
            <script is:inline src="https://weatherwidget.io/js/widget.min.js"></script>
        </div>
    </section>

    <!-- How It Works -->
    <section style="margin-top: 5rem; text-align: center;">
        <h2 style="color: #064e3b; font-size: 2rem; font-weight: 900; margin-bottom: 3rem;">How It Works</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 30px;">
            <div style="background: white; padding: 2.5rem 1.5rem; border-radius: 24px; border: 1px solid #eee; position: relative;">
                <div style="background: #ea580c; color: white; width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 900; position: absolute; top: -17px; left: 50%; transform: translateX(-50%);">1</div>
                <div style="font-size: 2.5rem; margin-bottom: 1rem;">üìû</div>
                <h4 style="color: #064e3b; font-weight: 800;">Call Us</h4>
                <p style="color: #64748b; font-size: 0.9rem;">Speak with our Florida dispatch about your tree project.</p>
            </div>
            <div style="background: white; padding: 2.5rem 1.5rem; border-radius: 24px; border: 1px solid #eee; position: relative;">
                <div style="background: #ea580c; color: white; width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 900; position: absolute; top: -17px; left: 50%; transform: translateX(-50%);">2</div>
                <div style="font-size: 2.5rem; margin-bottom: 1rem;">üë®‚Äçüîß</div>
                <h4 style="color: #064e3b; font-weight: 800;">Local Match</h4>
                <p style="color: #64748b; font-size: 0.9rem;">We connect you with the top-rated local crew in {cityData.County} County.</p>
            </div>
            <div style="background: white; padding: 2.5rem 1.5rem; border-radius: 24px; border: 1px solid #eee; position: relative;">
                <div style="background: #ea580c; color: white; width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 900; position: absolute; top: -17px; left: 50%; transform: translateX(-50%);">3</div>
                <div style="font-size: 2.5rem; margin-bottom: 1rem;">‚úÖ</div>
                <h4 style="color: #064e3b; font-weight: 800;">Job Done</h4>
                <p style="color: #64748b; font-size: 0.9rem;">Enjoy a safe, professional service and a clean property.</p>
            </div>
        </div>
    </section>

    <!-- Authority Content -->
    <section style="margin-top: 6rem; margin-bottom: 8rem;">
      <h2 style="color: #064e3b; font-size: 2.1rem; margin-bottom: 2rem; font-weight: 800;">Expert {serviceInfo.name} in {cityData.City}</h2>
      <div style="background: white; border-radius: 24px; padding: 3rem; border: 1px solid #e5e7eb; line-height: 1.9; box-shadow: 0 4px 6px rgba(0,0,0,0.02);">
        <p style="font-size: 1.25rem; color: #1b4332; font-weight: 700; margin-bottom: 1.5rem;">{cityData.Description}</p>
        <p style="font-size: 1.1rem; color: #4b5563;">
            Residents near <strong>{landmark}</strong> understand that Florida's weather requires proactive tree management. Whether you need hazardous tree removal or routine maintenance for your <strong>{treeType}</strong>, our network ensures the work is done to the highest safety standards in {cityData.County} County.
        </p>
      </div>
    </section>

  </main>
</MainLayout>

<style>
  a:hover { transform: translateY(-3px); box-shadow: 0 10px 20px rgba(0,0,0,0.1); transition: 0.2s; }
</style>