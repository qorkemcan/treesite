---
// src/layouts/MainLayout.astro
import { SITE_CONFIG } from '../config.js';

const { 
  title, 
  description, 
  badgeText = "✓ LICENSED, INSURED & BONDED • 2026 OFFICIAL DIRECTORY",
  ogImage = SITE_CONFIG.defaultOGImage 
} = Astro.props;

// Mevcut sayfanın tam URL'sini oluştur (Canonical için)
const canonicalURL = new URL(Astro.url.pathname, SITE_CONFIG.siteUrl);
// Sosyal medya başlığı
const ogTitle = title ? `${title} | ${SITE_CONFIG.brandName}` : SITE_CONFIG.brandName;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    
    <!-- Favicon & Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" /> <!-- Apple cihazlar için -->
    
    <!-- Primary Meta Tags -->
    <title>{title} | {SITE_CONFIG.brandName}</title>
    <meta name="title" content={`${title} | ${SITE_CONFIG.brandName}`} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook (WhatsApp paylaşımı dahil) -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, SITE_CONFIG.siteUrl)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={ogTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, SITE_CONFIG.siteUrl)} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap" rel="stylesheet">
    
    <slot name="head" />

    <style is:global>
      * { font-family: 'Inter', -apple-system, sans-serif !important; box-sizing: border-box; }
      body { margin: 0; background: #fcfcfc; color: #1a1a1a; line-height: 1.5; }
      .container { max-width: 1100px; margin: 0 auto; padding: 0 1.5rem; }
    </style>
  </head>
  <body>
    <div style="background: #0d2818; color: #d8f3dc; padding: 12px; text-align: center; font-size: 0.85rem; font-weight: 600; position: relative; z-index: 10001;">{badgeText}</div>
    
    <slot /> 

    <footer style="background: #064e3b; color: #d1fae5 !important; padding: 4rem 1.5rem 8rem; text-align: center; border-top: 1px solid rgba(255,255,255,0.1);">
      <p>© {SITE_CONFIG.year} {SITE_CONFIG.brandName} • Florida's Trusted Tree Experts</p>
      <p style="margin-top: 15px; font-size: 0.8rem; opacity: 0.8;">
        <a href="/" style="color: #d1fae5; text-decoration: none;">Home</a> • 
        <a href="/about" style="color: #d1fae5; text-decoration: none;">About Us</a> • 
        <a href="/privacy" style="color: #d1fae5; text-decoration: none;">Privacy Policy</a>
      </p>
    </footer>

    <div style="position: fixed; bottom: 0; left: 0; right: 0; background: rgba(255,255,255,0.95); backdrop-filter: blur(10px); padding: 12px 15px calc(12px + env(safe-area-inset-bottom)); z-index: 10000; display: flex; justify-content: center; border-top: 1px solid #eee;">
        <a href={SITE_CONFIG.phoneHref} style="background: #ea580c; color: white !important; width: 100%; max-width: 480px; padding: 16px; text-decoration: none !important; border-radius: 12px; font-weight: 800; text-align: center; font-size: 1.3rem; box-shadow: 0 4px 15px rgba(234, 88, 12, 0.4); display: block;">
            CALL FOR FREE QUOTE
        </a>
    </div>
  </body>
</html>