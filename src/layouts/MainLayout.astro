---
// src/layouts/MainLayout.astro
import { SITE_CONFIG } from '../config.js';

const { title, description, badgeText = "✓ LICENSED, INSURED & BONDED • 2026 OFFICIAL" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap" rel="stylesheet">
    <title>{title} | {SITE_CONFIG.brandName}</title>
    <meta name="description" content={description} />
    <style is:global>
      * { font-family: 'Inter', -apple-system, sans-serif !important; box-sizing: border-box; }
      body { margin: 0; background: #fcfcfc; color: #1a1a1a; line-height: 1.5; }
      header { background: linear-gradient(135deg, #1b4332 0%, #081c15 100%); color: white; padding: 5rem 1rem; text-align: center; border-bottom: 5px solid #f97316; }
      .container { max-width: 1000px; margin: 0 auto; padding: 0 1.5rem; }
      footer { background: #064e3b; color: #d1fae5 !important; padding: 4rem 1.5rem 8rem; text-align: center; border-top: 1px solid rgba(255,255,255,0.1); }
      .sticky-btn-wrap { position: fixed; bottom: 0; left: 0; right: 0; background: rgba(255,255,255,0.95); backdrop-filter: blur(10px); padding: 12px 15px calc(12px + env(safe-area-inset-bottom)); z-index: 10000; display: flex; justify-content: center; border-top: 1px solid #eee; }
      .sticky-btn { background: #ea580c; color: white !important; width: 100%; max-width: 480px; padding: 16px; text-decoration: none !important; border-radius: 12px; font-weight: 800; text-align: center; font-size: 1.25rem; box-shadow: 0 4px 12px rgba(234, 88, 12, 0.4); display: block; }
    </style>
  </head>
  <body>
    <div style="background: #0d2818; color: #d8f3dc; padding: 12px; text-align: center; font-size: 0.85rem; font-weight: 600;">{badgeText}</div>
    
    <slot /> <!-- Sayfa içeriği buraya gelecek -->

    <footer>
      <p>© {SITE_CONFIG.year} {SITE_CONFIG.brandName} • Licensed, Bonded & Insured Specialists</p>
      <p style="margin-top: 12px; font-size: 0.75rem; opacity: 0.8;">
        <a href="/" style="color: #d1fae5;">Home</a> • 
        <a href="/about" style="color: #d1fae5;">About Us</a> • 
        <a href="/privacy" style="color: #d1fae5;">Privacy Policy</a> • 
        <a href={`mailto:${SITE_CONFIG.email}`} style="color: #d1fae5;">Inquiries</a>
      </p>
    </footer>

    <div class="sticky-btn-wrap">
        <a href={SITE_CONFIG.phoneHref} class="sticky-btn">CALL FOR FREE QUOTE</a>
    </div>
  </body>
</html>