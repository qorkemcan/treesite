import { SITE_CONFIG } from '../config.js';

const { 
  title, 
  description, 
  badgeText = "âœ“ LICENSED, INSURED & BONDED â€¢ 2026 OFFICIAL DIRECTORY",
  ogImage = SITE_CONFIG.defaultOGImage 
